@model BankingApp.Models.Account



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Account_Balance" class="control-label"></label>
                <input asp-for="Account_Balance" class="form-control" />
                <span asp-validation-for="Account_Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOpened" class="control-label"></label>
                <input asp-for="DateOpened" class="form-control" />
                <span asp-validation-for="DateOpened" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account_Type" class="control-label"></label>
                <select asp-for="Account_Type" class="form-control"></select>
                <span asp-validation-for="Account_Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerFirstName" class="control-label"></label>
                <input asp-for="OwnerFirstName" class="form-control" />
                <span asp-validation-for="OwnerFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerLastName" class="control-label"></label>
                <input asp-for="OwnerLastName" class="form-control" />
                <span asp-validation-for="OwnerLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
